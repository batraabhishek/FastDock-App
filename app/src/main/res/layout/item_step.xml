<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <View
            android:id="@+id/list_top"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#8a000000"/>

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/track_circle"
            android:clickable="true"
            android:padding="16dp"/>

        <View
            android:id="@+id/list_bottom"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#8a000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_stop"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop 1"/>

            <TextView
                android:id="@+id/list_place"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rana Pratap Bagh"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_distance_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@color/colorAccent"
            android:gravity="center">

            <TextView
                android:id="@+id/list_distance"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAlignment="center"
                android:text="12 Km"
                android:textColor="#aaffffff"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>